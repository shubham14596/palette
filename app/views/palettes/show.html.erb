  <thead>
    <tr>
      <th>Colour</th>
      <th>Code</th>
      <th>Preview</th>
    </tr>
  </thead>
  <tbody>
    <% @palette.colours.each do |colour| %>
      <tr>
        <td><%= colour.name %></td>
        <td><%= colour.hex %></td>
        <td style="background: <%= colour.hex %>"></td>
      </tr>
    <% end %>
  </tbody>
