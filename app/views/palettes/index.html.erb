<div class = "row">
  <% @palettes.each do |p| %>
    <span class="col-md-4">
      <div class = "card" style="border-radius: 10px">
        <div class = "card-body row", style="overflow: auto; height: 200px">
          <% p.colors.each do |col| %>
            <span class="col-md-3" style="border-radius: 50%; background: rgb(<%= col.R %>, <%= col.G %>, <%= col.B %>); width:50px; height:50px; margin: 5px">
            </span>
          <% end %>
        </div>
      </div>
    </span>
  <% end %>
</div>