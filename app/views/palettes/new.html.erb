<h3 align="center" class="shadow"><b>Create a new Palette</b></h3>
<div class="card container body">
  <div class="card-body">
    <%= form_for :palette, url: palettes_path do |f| %>
      <div class="row">
        <%= f.text_field :name , placeholder: 'Palette Name', class: "col-md-6" %>
        <%= f.submit :create_palette, class: "col-md-6 btn btn-primary" %>
      </div>
    <% end %>
    <br>
    <div class="row">
      <div class="col-md-5">
        <label for="sel">Choose Colours:</label>
        <select multiple class="form-control" id="sel">
          <% @colours.each do |colour| %>
            <option value="<%= colour.name %>"><%= colour.name %></option>
          <% end %>
        </select>
        Or <br>
        <%= link_to 'Create New Colour', new_colour_path %>
      </div>
      <div>
        <Button onClick="selectColour()">></Button>
      </div>
      <div>
        Colors:<br>
      </div>
    </div>
  </div>
</div>